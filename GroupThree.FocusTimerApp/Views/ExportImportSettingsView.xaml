<UserControl x:Class="GroupThree.FocusTimerApp.Views.ExportImportSettingsView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:GroupThree.FocusTimerApp.Converters">
    
    <UserControl.Resources>
   <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
  </UserControl.Resources>

  <StackPanel>
     <!-- Header -->
<TextBlock Text="Import / Export Settings" 
FontSize="20" 
  FontWeight="Bold"
Foreground="{DynamicResource TextPrimaryBrush}"
  Margin="0,0,0,15" />

     <!-- Info Card -->
   <Border Background="{DynamicResource CardBackgroundBrush}"
   BorderBrush="{DynamicResource PrimaryButtonBrush}"
   BorderThickness="1"
 CornerRadius="16"
    Padding="15"
     Margin="0,0,0,15"
ClipToBounds="True">
     <StackPanel Orientation="Horizontal">
  <Path Data="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z"
     Fill="{DynamicResource PrimaryButtonBrush}"
  Width="16" Height="16"
       Stretch="Uniform"
      Margin="0,0,10,0"
 VerticalAlignment="Center" />
   <TextBlock Text="Export your settings to share with others, or import settings from a code."
 FontSize="12"
     Foreground="{DynamicResource TextSecondaryBrush}"
  TextWrapping="Wrap"
       VerticalAlignment="Center" />
     </StackPanel>
</Border>

   <!-- Export Section -->
  <Border Background="{DynamicResource CardBackgroundBrush}"
     BorderBrush="{DynamicResource BorderBrush}"
     BorderThickness="1"
   CornerRadius="16"
Padding="18"
 Margin="0,0,0,15"
ClipToBounds="True">
<StackPanel>
 <!-- Section Header -->
     <Grid Margin="0,0,0,12">
   <Grid.ColumnDefinitions>
 <ColumnDefinition Width="*" />
  <ColumnDefinition Width="Auto" />
   </Grid.ColumnDefinitions>

<StackPanel Grid.Column="0" Orientation="Horizontal">
       <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20M12,19L8,15H10.5V12H13.5V15H16L12,19Z"
    Fill="{DynamicResource PrimaryButtonBrush}"
  Width="16" Height="16"
      Stretch="Uniform"
  Margin="0,0,8,0"
   VerticalAlignment="Center" />
 <TextBlock Text="Export Settings"
  FontSize="14"
       FontWeight="SemiBold"
    Foreground="{DynamicResource TextPrimaryBrush}"
   VerticalAlignment="Center" />
</StackPanel>

      <StackPanel Grid.Column="1" Orientation="Horizontal">
   <Button Content="Generate"
 Command="{Binding GenerateExportCodeCommand}"
  Style="{StaticResource ModernButton}"
      Width="95"
   Height="36"
FontSize="12"
FontWeight="Medium"
  Margin="0,0,10,0" />

   <Button Content="Copy"
 Command="{Binding CopyExportCodeCommand}"
  Style="{StaticResource ModernButton}"
      Width="85"
 Height="36"
FontSize="12"
FontWeight="Medium" />
      </StackPanel>
    </Grid>

    <!-- Export Code TextBox - SMALLER -->
       <TextBox Text="{Binding ExportCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Height="60"
   FontSize="11"
  FontFamily="Consolas"
TextWrapping="Wrap"
   IsReadOnly="True"
VerticalScrollBarVisibility="Auto"
      Background="{DynamicResource ProgressBackgroundBrush}"
   Foreground="{DynamicResource TextPrimaryBrush}"
   BorderBrush="{DynamicResource PrimaryButtonBrush}"
 BorderThickness="2"
       Padding="8">
    <TextBox.Resources>
   <Style TargetType="Border">
      <Setter Property="CornerRadius" Value="10"/>
    </Style>
 </TextBox.Resources>
   </TextBox>
   </StackPanel>
  </Border>

   <!-- Import Section -->
  <Border Background="{DynamicResource CardBackgroundBrush}"
  BorderBrush="{DynamicResource BorderBrush}"
     BorderThickness="1"
     CornerRadius="16"
Padding="18"
     Margin="0,0,0,15"
ClipToBounds="True">
<StackPanel>
       <!-- Section Header -->
<StackPanel Orientation="Horizontal" Margin="0,0,0,12">
<Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20M12,11L16,15H13.5V18H10.5V15H8L12,11Z"
 Fill="{DynamicResource PrimaryButtonBrush}"
  Width="16" Height="16"
      Stretch="Uniform"
      Margin="0,0,8,0"
   VerticalAlignment="Center" />
 <TextBlock Text="Import Settings"
  FontSize="14"
       FontWeight="SemiBold"
      Foreground="{DynamicResource TextPrimaryBrush}"
   VerticalAlignment="Center" />
      </StackPanel>

   <!-- Import Code TextBox - SMALLER -->
     <TextBox Text="{Binding ImportCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
Height="60"
 FontSize="11"
   FontFamily="Consolas"
TextWrapping="Wrap"
VerticalScrollBarVisibility="Auto"
      Background="{DynamicResource ProgressBackgroundBrush}"
   Foreground="{DynamicResource TextPrimaryBrush}"
    BorderBrush="{DynamicResource PrimaryButtonBrush}"
   BorderThickness="2"
Padding="8"
  Margin="0,0,0,12">
    <TextBox.Resources>
       <Style TargetType="Border">
      <Setter Property="CornerRadius" Value="10"/>
     </Style>
 </TextBox.Resources>
 </TextBox>

    <Button Content="Import Settings"
 Command="{Binding ImportFromCodeCommand}"
  Style="{StaticResource PrimaryButton}"
  Width="155"
       Height="40"
FontSize="13"
FontWeight="SemiBold"
 HorizontalAlignment="Right" />
 </StackPanel>
  </Border>

   <!-- Status Message -->
        <Border Background="{DynamicResource CardBackgroundBrush}"
     BorderBrush="{DynamicResource BorderBrush}"
   BorderThickness="1"
   CornerRadius="16"
Padding="15"
   Margin="0,0,0,0"
       Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"
ClipToBounds="True">
    <StackPanel Orientation="Horizontal">
  <Path Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
     Fill="{DynamicResource PrimaryButtonBrush}"
  Width="16" Height="16"
     Stretch="Uniform"
      Margin="0,0,10,0"
 VerticalAlignment="Center" />
       <TextBlock Text="{Binding StatusMessage}"
 FontSize="13"
     Foreground="{DynamicResource TextPrimaryBrush}"
  TextWrapping="Wrap"
     VerticalAlignment="Center" />
     </StackPanel>
  </Border>
    </StackPanel>
</UserControl>
