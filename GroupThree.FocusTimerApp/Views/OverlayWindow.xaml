<Window x:Class="GroupThree.FocusTimerApp.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" 
        Height="140" 
        Width="320" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        Topmost="True"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Styled Progress Bar matching main window -->
        <Style x:Key="StyledProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#8B5CF6" Offset="0"/>
                        <GradientStop Color="#6366F1" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Height="{TemplateBinding Height}"/>
                            <Border x:Name="PART_Indicator"
                                    Background="{TemplateBinding Foreground}" 
                                    CornerRadius="4" 
                                    HorizontalAlignment="Left"
                                    Height="{TemplateBinding Height}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#8B5CF6" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1A1A1A" 
            CornerRadius="16" 
            Padding="20,16"
            BorderBrush="#8B5CF6"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="24" ShadowDepth="0" Opacity="0.7"/>
        </Border.Effect>

        <StackPanel>
            <!-- Header -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <Ellipse Width="6" Height="6" Margin="0,0,6,0" VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#8B5CF6" Offset="0"/>
                            <GradientStop Color="#6366F1" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#8B5CF6" BlurRadius="6" ShadowDepth="0" Opacity="0.8"/>
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock Text="Focus Timer" 
                           FontSize="11" 
                           FontWeight="SemiBold"
                           Foreground="#9CA3AF"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Time Display -->
            <TextBlock Text="{Binding Time, FallbackValue='00:00:00'}" 
                       FontSize="36" 
                       FontWeight="Bold"
                       Foreground="#FFFFFF" 
                       HorizontalAlignment="Center"
                       x:Name="OverlayTime"
                       Margin="0,4,0,12">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#8B5CF6" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Progress Bar -->
            <ProgressBar Minimum="0" 
                         Maximum="1" 
                         Value="{Binding Progress, FallbackValue=0}" 
                         Height="6"
                         Style="{StaticResource StyledProgressBar}"/>
        </StackPanel>
    </Border>
</Window>