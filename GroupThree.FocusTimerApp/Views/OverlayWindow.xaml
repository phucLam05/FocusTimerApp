<Window x:Class="GroupThree.FocusTimerApp.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" Height="120" Width="260" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Topmost="True">
    <Border Background="#CC000000" CornerRadius="8" Padding="10">
        <StackPanel>
            <TextBlock Text="00:00:00" FontSize="28" Foreground="White" HorizontalAlignment="Center" x:Name="OverlayTime" />
            <ProgressBar Minimum="0" Maximum="1" Value="0" Height="8" />
        </StackPanel>
    </Border>
</Window>