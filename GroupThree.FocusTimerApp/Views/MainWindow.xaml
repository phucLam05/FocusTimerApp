<Window x:Class="GroupThree.FocusTimerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Focus Timer" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" HorizontalAlignment="Left" Width="150"
                  Margin="0,0,0,10" SelectedValuePath="Tag" SelectedValue="{Binding SelectedMode, Mode=TwoWay}">
            <ComboBoxItem Content="Tracking" Tag="Tracking" />
            <ComboBoxItem Content="Pomodoro" Tag="Pomodoro" />
        </ComboBox>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding TimeText}" FontSize="36" HorizontalAlignment="Center" />
            <ProgressBar Width="300" Height="12" Value="{Binding Progress}" Minimum="0" Maximum="1" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Start" Width="80" Command="{Binding StartCommand}" Margin="4,0" />
            <Button Content="Pause" Width="80" Command="{Binding PauseCommand}" Margin="4,0" />
            <Button Content="Stop" Width="80" Command="{Binding StopCommand}" Margin="4,0" />
            <Button Content="Settings" Width="80" Command="{Binding OpenSettingsCommand}" Margin="4,0" />
        </StackPanel>
    </Grid>
</Window>