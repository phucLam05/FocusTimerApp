<Window x:Class="GroupThree.FocusTimerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Focus Timer" Height="480" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <ComboBox HorizontalAlignment="Left" Width="150"
                      SelectedValuePath="Tag" SelectedValue="{Binding SelectedMode, Mode=TwoWay}">
                <ComboBoxItem Content="Basic" Tag="Basic" />
                <ComboBoxItem Content="Pomodoro" Tag="Pomodoro" />
            </ComboBox>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button Content="Add" Width="60" Margin="8,0,0,0" Command="{Binding AddTrackCommand}" />
                <Button Content="Remove" Width="80" Margin="8,0,0,0" Command="{Binding RemoveSelectedTrackCommand}" />
                <Button Content="Play" Width="60" Margin="8,0,0,0" Command="{Binding PlaySelectedTrackCommand}" />
                <Button Content="Stop" Width="60" Margin="8,0,0,0" Command="{Binding StopPlaybackCommand}" />
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding TimeText}" FontSize="36" HorizontalAlignment="Center" />
                <ProgressBar Width="300" Height="12" Value="{Binding Progress}" Minimum="0" Maximum="1" />
            </StackPanel>

            <Border Grid.Column="1" Margin="10,0,0,0" Padding="6" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="Tracks" FontWeight="Bold" Margin="0,0,0,6" />
                    <ListBox ItemsSource="{Binding Tracks}" DisplayMemberPath="Title" Height="260"
                             SelectedItem="{Binding SelectedTrack, Mode=TwoWay}" />
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Start" Width="80" Command="{Binding StartCommand}" Margin="4,0" />
            <Button Width="80" Command="{Binding PauseCommand}" Margin="4,0" IsEnabled="{Binding CanPauseResume}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Content" Value="Pause" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsTimerRunning}" Value="False">
                                <Setter Property="Content" Value="Resume" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Stop" Width="80" Command="{Binding StopCommand}" Margin="4,0" />
            <Button Content="Settings" Width="80" Command="{Binding OpenSettingsCommand}" Margin="4,0" />
        </StackPanel>
    </Grid>
</Window>