<UserControl x:Class="GroupThree.FocusTimerApp.Views.AppControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:GroupThree.FocusTimerApp.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Focus Zone Apps"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Danh sách ứng dụng đang chạy -->
        <GroupBox Header="Running Apps" Grid.Row="1" Margin="0,0,0,10">
            <DataGrid ItemsSource="{Binding RunningApps}"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="App Name"
                                        Binding="{Binding AppName}"
                                        Width="*"/>
                    <DataGridTemplateColumn Header="Register">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Register"
                                        Command="{Binding DataContext.RegisterCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Padding="5,2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Danh sách ứng dụng đã đăng ký -->
        <GroupBox Header="Registered Apps" Grid.Row="2" Margin="0,0,0,10">
            <ListView ItemsSource="{Binding RegisteredApps}"
                      SelectedItem="{Binding SelectedApp}"
                      BorderBrush="#CCC"
                      BorderThickness="1"
                      Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="App Name"
                                        DisplayMemberBinding="{Binding AppName}"
                                        Width="200"/>
                        <GridViewColumn Header="Path"
                                        DisplayMemberBinding="{Binding ExecutablePath}"
                                        Width="350"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Nút điều khiển -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Refresh"
                    Width="80"
                    Margin="0,0,5,0"
                    Command="{Binding RefreshAppsCommand}"/>
            <Button Content="Add App"
                    Width="80"
                    Margin="0,0,5,0"
                    Command="{Binding AddAppCommand}"/>
            <Button Content="Remove"
                    Width="80"
                    Command="{Binding RemoveAppCommand}"
                    IsEnabled="{Binding SelectedApp, Converter={StaticResource NullToBoolConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
