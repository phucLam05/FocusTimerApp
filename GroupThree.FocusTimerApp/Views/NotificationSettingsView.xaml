<UserControl x:Class="GroupThree.FocusTimerApp.Views.NotificationSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <!-- Header -->
        <TextBlock Text="Notification Settings" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,15" />

        <!-- Enable Notifications -->
        <Border Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="18"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <Path Grid.Column="0"
                      Data="M21,19V20H3V19L5,17V11C5,7.9 7.03,5.17 10,4.29C10,4.19 10,4.1 10,4A2,2 0 0,1 12,2A2,2 0 0,1 14,4C14,4.1 14,4.19 14,4.29C16.97,5.17 19,7.9 19,11V17L21,19M14,21A2,2 0 0,1 12,23A2,2 0 0,1 10,21"
                      Fill="{DynamicResource PrimaryButtonBrush}"
                      Width="18" Height="18"
                      Stretch="Uniform"
                      Margin="0,0,12,0"
                      VerticalAlignment="Center" />
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Enable Notifications" 
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,2" />
                    <TextBlock Text="Show desktop notifications when timer completes" 
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                </StackPanel>
                
                <ToggleButton Grid.Column="2"
                              IsChecked="{Binding EnableNotifications, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ModernToggleSwitch}"
                              VerticalAlignment="Center" />
            </Grid>
        </Border>

        <!-- Enable Sound -->
        <Border Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="18"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <Path Grid.Column="0"
                      Data="M14,3.23V5.29C16.89,6.15 19,8.83 19,12C19,15.17 16.89,17.84 14,18.7V20.77C18,19.86 21,16.28 21,12C21,7.72 18,4.14 14,3.23M16.5,12C16.5,10.23 15.5,8.71 14,7.97V16C15.5,15.29 16.5,13.76 16.5,12M3,9V15H7L12,20V4L7,9H3Z"
                      Fill="{DynamicResource PrimaryButtonBrush}"
                      Width="18" Height="18"
                      Stretch="Uniform"
                      Margin="0,0,12,0"
                      VerticalAlignment="Center" />
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Enable Sound" 
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,2" />
                    <TextBlock Text="Play sound notification when timer ends" 
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                </StackPanel>
                
                <ToggleButton Grid.Column="2"
                              IsChecked="{Binding EnableSound, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ModernToggleSwitch}"
                              VerticalAlignment="Center" />
            </Grid>
        </Border>

        <!-- Additional Options in one card -->
        <Border Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="18"
                Margin="0,0,0,15">
            <StackPanel>
                <!-- Auto-dismiss -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Auto-dismiss Notifications" 
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,2" />
                        <TextBlock Text="Close notifications after 10 seconds" 
                                   FontSize="10"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                    </StackPanel>
                    
                    <CheckBox Grid.Column="1"
                              IsChecked="{Binding AutoDismissNotifications, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ModernCheckBox}"
                              VerticalAlignment="Center" />
                </Grid>

                <Separator Background="{DynamicResource BorderBrush}" 
                           Margin="0,0,0,12" />

                <!-- Show on all workspaces -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Show on All Workspaces" 
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,2" />
                        <TextBlock Text="Display on every virtual desktop" 
                                   FontSize="10"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                    </StackPanel>
                    
                    <CheckBox Grid.Column="1"
                              IsChecked="{Binding ShowOnAllWorkspaces, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ModernCheckBox}"
                              VerticalAlignment="Center" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Reset Defaults" 
                    Command="{Binding ResetDefaultsCommand}" 
                    Style="{StaticResource ModernButton}"
                    Width="130"
                    Height="38"
                    Margin="0,0,8,0" />
            
            <Button Content="Test Notification" 
                    Command="{Binding TestNotificationCommand}" 
                    Style="{StaticResource ModernButton}"
                    Width="140"
                    Height="38"
                    Margin="0,0,8,0" />
            
            <Button Content="Save Changes" 
                    Command="{Binding SaveCommand}" 
                    Style="{StaticResource PrimaryButton}"
                    Width="140"
                    Height="38" />
        </StackPanel>
    </StackPanel>
</UserControl>