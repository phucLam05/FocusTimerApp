<Window x:Class="GroupThree.FocusTimerApp.Views.HotkeyInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Hotkey" 
        Height="250" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">
    
    <Border Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource PrimaryButtonBrush}"
            BorderThickness="2"
            CornerRadius="12"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock x:Name="TitleText"
                           Text="Edit Hotkey" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="ActionNameText"
                           Text="Action: Start Timer" 
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>

            <!-- Current Hotkey -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="12"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Press any key combination:" 
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="HotkeyDisplay"
                               Text="Ctrl + Alt + S" 
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryButtonBrush}"
                               HorizontalAlignment="Center"
                               Padding="15,10"/>
                </StackPanel>
            </Border>

            <!-- Instructions -->
            <Border Grid.Row="3"
                    Background="{DynamicResource SecondaryButtonBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="10"
                    Margin="0,0,0,15">
                <TextBlock FontSize="10"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           TextWrapping="Wrap"
                           LineHeight="16">
                    <Run Text="&#x2022; Use Ctrl, Alt, Shift, or Win as modifiers" />
                    <LineBreak />
                    <Run Text="&#x2022; Press ESC to cancel" />
                    <LineBreak />
                    <Run Text="&#x2022; Press Backspace to clear" />
                </TextBlock>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="ClearButton"
                        Content="Clear" 
                        Click="ClearButton_Click"
                        Style="{StaticResource ModernButton}"
                        Width="100"
                        Height="36"
                        Margin="0,0,8,0" />
                
                <Button x:Name="CancelButton"
                        Content="Cancel" 
                        Click="CancelButton_Click"
                        Style="{StaticResource ModernButton}"
                        Width="100"
                        Height="36"
                        Margin="0,0,8,0" />
                
                <Button x:Name="OkButton"
                        Content="OK" 
                        Click="OkButton_Click"
                        Style="{StaticResource PrimaryButton}"
                        Width="100"
                        Height="36" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
