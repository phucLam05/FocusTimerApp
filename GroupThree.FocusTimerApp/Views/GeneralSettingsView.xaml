<UserControl x:Class="GroupThree.FocusTimerApp.Views.GeneralSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:GroupThree.FocusTimerApp.Converters">

    <UserControl.Resources>
        <conv:ThemeToIconConverter x:Key="ThemeToIconConverter" />
        <conv:ThemeToTextConverter x:Key="ThemeToTextConverter" />
    </UserControl.Resources>

    <StackPanel Margin="0">
        <!-- General Settings Section -->
        <TextBlock Text="General Settings" 
           FontWeight="Bold" 
            FontSize="20" 
  Foreground="{DynamicResource TextPrimaryBrush}"
        Margin="0,0,0,15" />

        <!-- Settings Card -->
        <Border Background="{DynamicResource CardBackgroundBrush}"
           BorderBrush="{DynamicResource BorderBrush}"
     BorderThickness="1"
       CornerRadius="16"
  Padding="18"
Margin="0,0,0,15"
ClipToBounds="True">
            <StackPanel>
                <!-- Start with Windows -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Start with Windows" 
          FontSize="13"
        FontWeight="SemiBold"
         Foreground="{DynamicResource TextPrimaryBrush}"
               Margin="0,0,0,3" />
                        <TextBlock Text="Launch the app automatically when Windows starts" 
  FontSize="11"
         Foreground="{DynamicResource TextSecondaryBrush}"
    TextWrapping="Wrap" />
                    </StackPanel>

                    <ToggleButton Grid.Column="1"
  IsChecked="{Binding StartWithWindows}"
     Style="{StaticResource ModernToggleSwitch}"
            VerticalAlignment="Center" />
                </Grid>

                <Separator Background="{DynamicResource BorderBrush}" 
    Margin="0,0,0,12" />

                <!-- Run in Background -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Run in background" 
     FontSize="13"
         FontWeight="SemiBold"
 Foreground="{DynamicResource TextPrimaryBrush}"
        Margin="0,0,0,3" />
                        <TextBlock Text="Keep the app running in the system tray" 
         FontSize="11"
               Foreground="{DynamicResource TextSecondaryBrush}"
         TextWrapping="Wrap" />
                    </StackPanel>

                    <ToggleButton Grid.Column="1"
           IsChecked="{Binding RunInBackground}"
                   Style="{StaticResource ModernToggleSwitch}"
        VerticalAlignment="Center" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Appearance Section -->
        <TextBlock Text="Appearance" 
            FontWeight="Bold" 
        FontSize="16" 
          Foreground="{DynamicResource TextPrimaryBrush}"
        Margin="0,5,0,12" />

        <!-- Theme Card -->
        <Border Background="{DynamicResource CardBackgroundBrush}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1"
  CornerRadius="16"
 Padding="18"
    Margin="0,0,0,15"
ClipToBounds="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Theme" 
     FontSize="13"
            FontWeight="SemiBold"
    Foreground="{DynamicResource TextPrimaryBrush}"
    Margin="0,0,0,3" />
                    <TextBlock Text="Choose between light and dark theme" 
       FontSize="11"
           Foreground="{DynamicResource TextSecondaryBrush}" />
                </StackPanel>

                <Button Grid.Column="1"
                Command="{Binding ToggleThemeCommand}" 
               Width="130" Height="34"
   Style="{StaticResource ModernButton}"
       HorizontalContentAlignment="Left"
     Padding="12,0"
           VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{Binding ThemeService.IsDarkMode, Converter={StaticResource ThemeToIconConverter}}"
           Fill="{DynamicResource TextPrimaryBrush}"
   Width="15" Height="15" 
             Stretch="Uniform"
            Margin="0,0,8,0"
        VerticalAlignment="Center" />
                        <TextBlock Text="{Binding ThemeService.IsDarkMode, Converter={StaticResource ThemeToTextConverter}}"
             FontSize="12"
   Foreground="{DynamicResource TextPrimaryBrush}"
   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Reset Defaults" 
      Command="{Binding ResetDefaultsCommand}" 
          Style="{StaticResource ModernButton}"
 Width="130"
        Height="38"
        Margin="0,0,8,0" />

            <Button Content="Save Changes" 
 Command="{Binding SaveCommand}" 
         Style="{StaticResource PrimaryButton}"
       Width="140"
         Height="38" />
        </StackPanel>
    </StackPanel>
</UserControl>